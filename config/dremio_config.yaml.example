dremio_clusters:
  source:
    host: "source-dremio-host"
    port: 9047
    username: "source_user"
    password: "source_password"
    ssl: false
    auth_type: "basic"
    token: ""  # if using token authentication
    catalog: "source_catalog"
    schema: "source_schema"
    file_formats:
      - type: "parquet"
        compression: "snappy"
      - type: "orc"
        compression: "zlib"
      - type: "csv"
        compression: "gzip"

  target:
    host: "target-dremio-host"
    port: 9047
    username: "target_user"
    password: "target_password"
    ssl: false
    auth_type: "basic"
    token: ""  # if using token authentication
    catalog: "target_catalog"
    schema: "target_schema"
    file_formats:
      - type: "parquet"
        compression: "snappy"
      - type: "orc"
        compression: "zlib"
      - type: "csv"
        compression: "gzip"

# Query settings
query_settings:
  timeout: 300  # seconds
  max_rows: 1000000
  fetch_size: 1000
  batch_size: 10000  # for data transfer operations

# Data mart configurations
data_marts:
  - name: "sales_mart"
    tables:
      - name: "sales_fact"
        size_mb: 1000
        columns:
          - name: "transaction_id"
            type: "INTEGER"
          - name: "date_id"
            type: "INTEGER"
          - name: "product_id"
            type: "INTEGER"
          - name: "customer_id"
            type: "INTEGER"
          - name: "quantity"
            type: "INTEGER"
          - name: "unit_price"
            type: "DECIMAL(10,2)"
          - name: "total_amount"
            type: "DECIMAL(10,2)"
      - name: "dim_date"
        size_mb: 10
        columns:
          - name: "date_id"
            type: "INTEGER"
          - name: "date"
            type: "DATE"
          - name: "year"
            type: "INTEGER"
          - name: "month"
            type: "INTEGER"
          - name: "day"
            type: "INTEGER"

  - name: "customer_mart"
    tables:
      - name: "customer_dim"
        size_mb: 100
        columns:
          - name: "customer_id"
            type: "INTEGER"
          - name: "name"
            type: "VARCHAR(100)"
          - name: "email"
            type: "VARCHAR(100)"
          - name: "address"
            type: "VARCHAR(200)"
          - name: "created_date"
            type: "TIMESTAMP"

# Benchmark settings
benchmark:
  test_scenarios:
    - name: "single_table_transfer"
      description: "Transfer single table between clusters"
      iterations: 3
      warmup_runs: 1
    - name: "multi_table_transfer"
      description: "Transfer multiple related tables"
      iterations: 3
      warmup_runs: 1
    - name: "data_mart_transfer"
      description: "Transfer entire data mart"
      iterations: 3
      warmup_runs: 1
    - name: "format_conversion"
      description: "Transfer with format conversion"
      iterations: 3
      warmup_runs: 1
  file_formats:
    - type: "parquet"
      compression: "snappy"
    - type: "orc"
      compression: "zlib"
    - type: "csv"
      compression: "gzip" 